<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>/conferencia/login/login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>Servlet.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletMenu</servlet-name>
        <servlet-class>Servlet.servletMenu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogout</servlet-name>
        <servlet-class>Servlet.ServletLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletTipoConferencia</servlet-name>
        <servlet-class>Servlet.Conferencia.ServletTipoConferencia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletSeccionConferencia</servlet-name>
        <servlet-class>Servlet.Conferencia.servletSeccionConferencia</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletMenu</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletTipoConferencia</servlet-name>
        <url-pattern>/tipoConferencia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletSeccionConferencia</servlet-name>
        <url-pattern>/seccionConferencia</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
